    font-weight: bold;
    color: red;
}

#message {
    font-weight: bold;
    color: green;
}

//script.js
document.addEventListener('DOMContentLoaded', function() {
    const slider = document.getElementById('slider');
    const circlesContainer = document.getElementById('circles');
    const attemptsDisplay = document.getElementById('attempts');
    const messageDisplay = document.getElementById('message');

    // Random number between 1 and 10
    const correctNumber = Math.floor(Math.random() * 10) + 1;
    let attempts = 0;
    let gameOver = false;

    // Create 10 circles
    for (let i = 1; i <= 10; i++) {
        const circle = document.createElement('div');
        circle.className = 'circle';
        circle.textContent = i;
        circlesContainer.appendChild(circle);
    }

    slider.addEventListener('change', function() {
        if (gameOver) return;

        attempts++;
        attemptsDisplay.textContent = "Attempt No. " + attempts;

        const guessedNumber = parseInt(slider.value);
        const allCircles = circlesContainer.children;
        const guessedCircle = allCircles[guessedNumber - 1];

        if (guessedNumber === correctNumber) {
            guessedCircle.className = 'circle correct';
            messageDisplay.textContent = "You Win! Correct number guessed in " + attempts + " attempts!";
            gameOver = true;
            slider.disabled = true;
        } else {
            if (guessedNumber < correctNumber) {
                guessedCircle.className = 'circle smaller';
            } else {
                guessedCircle.className = 'circle greater';
            }
        }

        if (attempts >= 6 && !gameOver) {
            messageDisplay.textContent = "Game Over! The correct number was " + correctNumber + ".";
            messageDisplay.style.color = 'red';
            gameOver = true;
            slider.disabled = true;
        }
    });
});
